<div class="bg-content">

</div>

  <div class="container">
    <div class="container-content">

    <p id="notice"><%= notice %></p>

    <h1>Important Places in Paris</h1>

    <table>
      <thead>
        <tr>
          <th>Photo</th>
          <th>Name</th>
          <th>Address</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @flats.each do |flat| %>
          <tr>
            <td><img class="img-card" src="<%= flat.photo %>"></td>
            <td><%= flat.name %></td>
            <td><%= flat.address %></td>
            <td><%= link_to 'Show', flat %></td>
            <td><%= link_to 'Edit', edit_flat_path(flat) %></td>
            <td><%= link_to 'Destroy', flat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>

  <br>

  <div class="container">
    <div id="map"
         style="width: 100%; height: 600px;"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>


  <%= link_to 'New Flat', new_flat_path %>
</div>
